
  <%= simple_form_for [@message] do |f| %>
  <div class="form-group">
    <%= f.input :name, label: "Nome" %>
  </div>
  <div class="form-group">
    <%= f.input :email, label: "Email"%>
  </div>
  <div class="form-group">
    <%= f.input :phone, label: "Telefone"%>
  </div>
  <div class="form-group">
    <%= f.input :sport, label: "Esporte"%>
  </div>
  <div class="form-group">
    <%= f.input :year, label: "Ano de conclusão do ensino médio"%>
  </div>
  <div class="form-group">
    <%= f.input :level, label: "Nível de Inglês", collection: ["Iniciante", "Intermediário", "Avançado", "Fluente"], class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.input :content, as: :text, label: "Escreva sua mensagem", class: "form-control", rows: 15%>
  </div>

  <%= f.submit "Enviar", class: "btn btn-primary" %>
  <%= link_to "Voltar", root_path %>

  <% end %>
