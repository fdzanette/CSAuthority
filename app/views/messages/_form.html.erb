<div class="form-margin">
  <%= simple_form_for [@message] do |f| %>
    <div class="form-group">
      <%= f.text_field :name, class: "form-control", placeholder: "Nome", autofocus: true %>
    </div>
    <div class="form-group">
      <%= f.text_field :email, class: "form-control", placeholder: "Email"%>
    </div>
    <div class="form-group">
      <%= f.text_field :phone, class: "form-control", placeholder: "Telefone"%>
    </div>
    <div class="form-group">
      <%= f.text_field :sport, class: "form-control", placeholder: "Esporte que pratica"%>
    </div>
    <div class="form-group">
      <%= f.text_field :year, class: "form-control", placeholder: "Ano de conclusão do ensino médio"  %>
    </div>
    <div class="form-group">
        <%= f.select(:level, [ "Nível de Inglês", "Iniciante", "Intermediário", "Avançado", "Fluente"], {}, {class: "form-control"}) %>
    </div>
    <div class="form-group">
      <%= f.text_area :content, rows: 6, class: "form-control", placeholder: "Escreva sua mensagem" %>
    </div>
    <div class="form-buttons">
      <%= f.submit "Enviar", class: "btn btn-primary" %>
      <%= link_to "Voltar", root_path, class: "btn btn-dark" %>
    </div>
  <% end %>
</div>
